<% layout('./layouts/layouts') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="card">
                    <div class="card-header">
                        <h1 style="color: rgb(183, 0, 255);">All Transactions</h1>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <% if(a.length > 0) { %>
                                <% for(let c of a) {%>
                                    <li class="list-group-item" style="text-transform: capitalize;">
                                        <%= c.payment %> <b style="color: green;">----- <%= c.Date %></b>
                                    </li>
                                <% } %>
                            <% } else { %>
                                <li class="list-group-item" style="text-transform: capitalize; color: red;">
                                    We apologize, but there are no transactions to display at this time.
                                </li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    